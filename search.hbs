<main class="content">
  <div class="container">
    <div class="mb-5">
      <h2>
        {{#if searchQuery}}
          <span class="text-muted">Showing search results for </span>"{{searchQuery}}"
        {{else}}
          Showing all posts
        {{/if}}
      </h2>
      <div class="mt-4">
        {{> search-widget}}
      </div>
    </div>
    <div class="row">
      {{#if posts.length}}
        {{#each posts}}
          {{> post this}}
        {{/each}}
      {{else}}
        {{> no-content}}
      {{/if}}
    </div>
    {{#if totalPages}}
      {{> pagination}}
    {{/if}}
  </div>
</main>
